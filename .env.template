# QMail Configuration - Ready to Use Template
# Copy these exact values or modify as needed

# ============================================
# FLASK CONFIGURATION (REQUIRED)
# ============================================
FLASK_APP=app.py
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=abcdef123456789012345678901234567890abcd

# ============================================
# DATABASE (REQUIRED)
# ============================================
# For Local Development (SQLite):
DATABASE_URL=sqlite:///qmail.db

# For Production (PostgreSQL) - uncomment to use:
# DATABASE_URL=postgresql://user:password@localhost:5432/qmail

# ============================================
# EMAIL SERVERS (Optional - defaults provided)
# ============================================
# Gmail SMTP (for sending emails)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Gmail IMAP (for receiving emails)
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=true

# ============================================
# QUANTUM KEY DISTRIBUTION (Optional)
# ============================================
QKD_KM_HOST=localhost
QKD_KM_PORT=8080
QKD_KM_API_VERSION=v1
QKD_KM_MASTER_SAE_ID=master-sae-123
QKD_KM_SLAVE_SAE_ID=slave-sae-456
QKD_KM_USE_HTTPS=false
QKD_KM_VERIFY_SSL=true
QKD_USE_MOCK=true

# ============================================
# SECURITY SETTINGS (Optional)
# ============================================
DEFAULT_SECURITY_LEVEL=2
SESSION_TIMEOUT=30
MAX_EMAIL_SIZE=25

# ============================================
# LOGGING (Optional)
# ============================================
LOG_LEVEL=INFO
LOG_FILE=qmail.log
